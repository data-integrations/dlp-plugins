{
  "metadata": {
    "spec-version": "1.6"
  },
  "display-name": "PII Filter",
  "configuration-groups": [
    {
      "label": "Input",
      "properties": [
        {
          "name": "entire-record",
          "label": "Filter on",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "true",
            "options": [
              {
                "id": "false",
                "label": "Field"
              },
              {
                "id": "true",
                "label": "Record"
              }
            ]
          },
          "plugin-function": {
            "label": "Get Schema",
            "widget": "outputSchema",
            "position": "top-right",
            "multiple-inputs": false,
            "button-class": "btn-hydrator"
          }
        },
        {
          "widget-type": "input-field-selector",
          "label": "Field",
          "name": "field",
          "widget-attributes": {
            "allowedTypes": [
              "string",
              "int",
              "long",
              "boolean",
              "date",
              "double",
              "decimal",
              "float",
              "time",
              "timestamp"
            ]
          }
        }
      ]
    },
    {
      "label": "Inspection Template",
      "properties": [
        {
          "widget-type": "toggle",
          "name": "customTemplateEnabled",
          "label": "Use custom template",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            }
          }
        },
        {
          "name": "template-id",
          "widget-type": "textbox",
          "label": "Template ID",
          "widget-attributes": {
            "placeholder": "Inspection Template ID"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Custom Template Path",
          "name": "customTemplatePath",
          "widget-attributes": {
            "placeholder": "Custom Template Path"
          }
        }
      ]
    },
    {
      "label": "Error Handling",
      "properties": [
        {
          "name": "on-error",
          "label": "On error",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "stop-on-error",
            "options": [
              {
                "id": "stop-on-error",
                "label": "Stop pipeline"
              },
              {
                "id": "skip-record",
                "label": "Skip record"
              }
            ]
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Service Account Path",
          "name": "serviceFilePath",
          "widget-attributes": {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Project Id",
          "name": "project",
          "widget-attributes": {
            "default": "auto-detect"
          }
        }
      ]
    },
    {
      "label": "Advanced configuration",
      "properties": [
        {
          "widget-type": "toggle",
          "name": "dlp-override-enabled",
          "label": "Custom DLP endpoint",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            }
          }
        },
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "dlp-host",
          "widget-attributes": {
            "default": "dlp.local"
          }
        },
        {
          "widget-type": "number",
          "label": "Port",
          "name": "dlp-port",
          "widget-attributes": {
            "default": "7332"
          }
        },
        {
          "widget-type": "toggle",
          "name": "dlp-tls-enabled",
          "label": "Send credentials",
          "widget-attributes": {
            "default": "false",
            "on": {
              "value": "true",
              "label": "Yes"
            },
            "off": {
              "value": "false",
              "label": "No"
            }
          }
        }
      ]
    }
  ],
  "outputs": [],
  "filters": [
    {
      "name": "Filter for simple condition objects - 1",
      "condition": {
        "property": "entire-record",
        "operator": "equal to",
        "value": "false"
      },
      "show": [
        {
          "name": "field"
        }
      ]
    },
    {
      "name": "Filter for DLP Container configuration",
      "condition": {
        "property": "dlp-override-enabled",
        "operator": "equal to",
        "value": "true"
      },
      "show": [
        {
          "name": "dlp-host"
        },
        {
          "name": "dlp-port"
        },
        {
          "name": "dlp-tls-enabled"
        }
      ]
    },
    {
      "name": "Filter for simple condition objects - 1",
      "condition": {
        "property": "customTemplateEnabled",
        "operator": "equal to",
        "value": "true"
      },
      "show": [
        {
          "name" : "customTemplatePath"
        }
      ]
    }
  ]
}
